<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>Result</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">      
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  </head>
  <body>  
    <nav class="nav-extended">
      <div class="nav-wrapper blue">
        <a href="#" class="brand-logo center">Transcript Parser</a>
        <ul class="left">
          <li><a href="/">Go Back</a></li>
        </ul>    
      </div>
    </nav>

    <main class="container">
      <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="card horizontal">
              <div class="card-stacked">
                <div class="card-content">
                  <p>Name: <%= data.fullname %></p>
                  <p>ID: <%= data.id %></p>
                  <p>GPA: <%= data.gpa %></p>
                  
                  <!-- Loop through courses and grades -->
                  <ul>
                    <% for (let course in data.courses) { %>
                      <li><%= course %>: <%= data.courses[course] %></li>
                    <% } %>
                    <br>
                    <li>inProgressCourses</li>
                    <% for (let course in data.inProgressCourses) { %>
                      <li><%= course %>: <%= data.inProgressCourses[course] %></li>
                    <% } %>
                  </ul>
                  <h5>Total points form transcript: 30/40%</h5>
                  <h5>Number of As: 7</h5>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <textarea id="textarea2" style="height: 300vh;" class="materialize-textarea">
                <%= JSON.stringify(parsedText) %>
              </textarea>
              <label for="textarea1">Parsed Contents</label>
            </div>
          </div>
        </form>
      </div>
    </main>   
  </body>
</html>
